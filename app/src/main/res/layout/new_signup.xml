<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/progressBar2"
        android:layout_toEndOf="@+id/progressBar2">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/signup_tv"
            android:textColor="#605f64"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="4dp"
            android:text="What's More Get 20 WONs on Sign Up!"
            android:layout_marginTop="5dp"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btnFb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#3f5f9c"
            android:drawableLeft="@drawable/fr"
            android:textAllCaps="false"
            android:textColor="#fefefe"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"/>



        <Button
            android:id="@+id/btnmySignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/btncolor"
            android:drawableRight="@drawable/arrow"
            android:text="\t\t\t\t\t\t\t\t\tSIGN UP WITH EMAIL"
            android:textAllCaps="false"
            android:textColor="#fefefe"
            android:textSize="12sp"
            android:layout_marginTop="10dp"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:text="Or"
                    android:textColor="#959a90" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray" />

            </LinearLayout>
        </RelativeLayout>

        <!--<TextView-->
            <!--android:id="@+id/tvNahGuestUser"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:text="Nah! I will use Predefined Message"-->
            <!--android:textColor="#605f64"-->
            <!--android:textStyle="normal" />-->

        <LinearLayout
            android:id="@+id/linearNahGuestUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:padding="10dp">

          <!--  <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Nah! "
                android:textSize="16sp"
                android:textColor="#605f64"
                android:visibility="visible" />-->


            <TextView
                android:id="@+id/tvNahGuestUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nosignupmsg"
                android:textSize="16sp"
                android:textColor="#605f64"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@android:color/black" />


    </LinearLayout>
</RelativeLayout>