<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="1dp">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearAdmin"
        android:layout_marginLeft="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/linearAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/imgIcon"
        android:orientation="vertical"
        android:padding="2dp">


        <TextView
            android:id="@+id/tvAdminMsg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_head_"
            android:paddingBottom="3dp"
            android:paddingLeft="15dp"
            android:paddingRight="4dp"
            android:paddingTop="3dp"
            android:text="The ball is going, going gone...."
            android:textColor="@color/white"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/linearAdminBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/chatbody"
            android:orientation="horizontal"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/btnAdminMsgYes"
                    android:src="@drawable/facebook" />

                <ImageView
                    android:id="@+id/whatsapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/whatsapp" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>