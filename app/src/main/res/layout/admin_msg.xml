<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="4dp">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearAdmin"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/linearAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/imgIcon"
        android:orientation="vertical"
        android:padding="2dp">


        <TextView
            android:id="@+id/tvAdminMsg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_head_"
            android:paddingBottom="3dp"
            android:paddingLeft="15dp"
            android:paddingRight="4dp"
            android:paddingTop="3dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chatbody"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/btnAdminMsgYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:padding="4dp"
                android:gravity="center"
                android:text="Yes I want to tune in"/>

            <TextView
                android:id="@+id/btnAdminMsgNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:padding="4dp"
                android:gravity="center"
                android:text="No Thanks"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>