<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="4dp">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/linearAdmin"/>

 <LinearLayout
    android:id="@+id/linearAdmin"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="2dp"
    android:layout_toRightOf="@+id/imgIcon">


        <TextView
            android:id="@+id/tvAdminMsg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingRight="4dp"
            android:background="@drawable/chat_head_"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/chatbody"
            android:padding="4dp"
            android:gravity="left">

            <TextView
                android:id="@+id/btnAdminMsgYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes I want to tune in"
                android:padding="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>

            <TextView
                android:id="@+id/btnAdminMsgNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Thanks"
                android:padding="4dp"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
</android.support.v7.widget.CardView>